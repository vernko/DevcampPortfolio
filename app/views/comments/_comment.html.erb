<div class="comment-card">
	<div class="card">
		<div class="card-block">
			<div class="row">
				<div class="col-md-2">
					<%= gravatar_helper comment.user %>
				</div>

				<div class="col-md-10">
					<div>
						<%= comment.content %>
					</div>

					<div>
						Comment posted by <%= comment.user.first_name %>
					</div>			
				</div>
			</div>
		</div>
	</div>
</div>