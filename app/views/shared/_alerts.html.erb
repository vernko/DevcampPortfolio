<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Vern Kofford Portfolio", time: 2000, sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Vern Kofford Portfolio", time: 2000, sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Vern Kofford Portfolio", time: 2000, sticky: false) %>
<% end %>