<%= form_with(model: @portfolio_item, local: true) do |f| %>
  <% if @portfolio_item.errors.any? %>
      <% @portfolio_item.errors.full_messages.each do |error| %>
        <%= alert_generator error %>
      <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
    
      <div class="form-group">
      <h2>Portfolio Information</h2>
        <%= f.label :title %>
        <%= f.text_field :title, id: :portfolio_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, id: :portfolio_title, class: 'form-control' %>
      </div>

      <div class="form-group">
      <label class="btn btn-primary">
        Upload a main image <%= f.file_field :main_image, style: 'display:none;' %>
      </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image <%= f.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, id: :portfolio_body, class: 'form-control' %>
      </div>

    </div>    
    <div class="col-md-6"> 
      <div>
      <h2>Technologies used</h2>
        <%= f.fields_for :technologies  do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
      </div>
        <% end %>
        <div>
          <%= link_to_add_association 'Add Technology', f, :technologies %>
        </div>
      </div>
    </div>  
    
    <div class="col-md-12">
      <div class="form-group">
        <%= f.submit "Save Portfolio Item", class: 'btn btn-primary' %>
      </div>
    </div>  
    
<% end %>