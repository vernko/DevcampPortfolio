<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
    
      <div class="form-group">
      <h2>Portfolio Information</h2>
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_title, class: 'form-control' %>
      </div>

      <div class="form-group">
      <label class="btn btn-primary">
        Upload a main image <%= form.file_field :main_image, style: 'display:none;' %>
      </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, id: :portfolio_body, class: 'form-control' %>
      </div>

    </div>    
    <div class="col-md-6"> 
      <div>
      <h2>Technologies used</h2>
        <%= form.fields_for :technologies  do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
      </div>
        <% end %>
        <div>
          <%= link_to_add_association 'Add Technology', form, :technologies %>
        </div>
      </div>
    </div>  
    
    <div class="col-md-12">
      <div class="form-group">
        <%= form.submit "Save Portfolio Item", class: 'btn btn-primary btn-block' %>
      </div>
    </div>  
    
<% end %>